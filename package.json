		"@types/turndown": "^5.0.5",
		"@types/vscode": "^1.84.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.0",
		"c8": "^10.1.3",
		"chai": "^4.3.10",
		"chalk": "5.6.2",
		"cross-env": "^10.1.0",
		"esbuild": "^0.25.0",
		"grpc-tools": "^1.13.0",
